<div class="navbar shadow navbar-expand-sm navbar-light navbar-lewagon">

    <div class="d-flex align-items-center">
      <% unless current_page?(root_path) %>
      <%= link_to :back do %>
        <i class="fas fa-chevron-left"></i>
        <% end %>
      <% end %>
    <% if current_page?(tents_path) %>
      <div class="navbar-search" >
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control form-search shadow-sm mr-sm-2" type="search" placeholder="Search" aria-label="Search" >
          <button class="btn-search-ghost my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
      <% end %>
    </div>



  <%= link_to root_path, class: "navbar-brand" do %>Rent
    <i class="fas fa-campground"></i>Tent
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if user_signed_in? %>
            <%= link_to "Add a tent", new_tent_path, class: "nav-link" %>
          <%#= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link"%>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.avatar %>
          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <%= image_tag "images/default_avatar.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Edit my profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Dashboard", root_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

</div>
