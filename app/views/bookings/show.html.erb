<div class="container container-show" id="container-show-fix">

<div class="btn-return row mt-5">
  <%= link_to "See All Tents", tents_path, class:"btn btn-search-book-page" %>
</div>

<div class="card-tent-booking mb-3 shadow" id="booking-card" style="max-width: 1000px;">
  <div class="row no-gutters align-items-center">

    <div class="h-100 col-md-4" style="display: flex;">
      <%= cl_image_tag @booking.tent.photo, class: 'card-tent-img-booking'%>
    </div>


    <div class="h-75 col-md-8" id="container-card-tent-infos">
        <div class="card-body p-3" id="card-tent-infos">
          <h6 class="card-text row mb-3"><%= @booking.tent.address %></h6> <!-- address -->
          <h2 class="card-title mb-3"><%= @booking.tent.title%></h2> <!-- title -->
          <p class="card-text"><%= @booking.tent.description%></p> <!-- description -->
        </div>

        <div>
          <img src="https://kitt.lewagon.com/placeholder/users/hamzif" class="card-tent-owner avatar-bordered">
          <!-- user (tent owner) image  -->
          <!-- first_name, last_name-->
          <!-- btn-submit -->
        </div>


        <div class="d-flex justify-content-between p-3">
          <div>
            <% 5.times do %>
              <i class="fas fa-star mr-0" style="color:#FDCA40;"></i>
            <% end %>
          </div>
            <h3 class="card-tent-pricing">$<%= @booking.tent.price %><p><small>/per day</small></p></h3>
        </div>
        <div class="card-body p-3" id="card-tent-infos">
          <h4><strong>Status:</strong> Your reservation is <font color="#FDCA40"> pending</font>.</h4>
        </div>
<!--
        <div class="btn-book"> -->
          <%#= link_to "Pending", "#", class: "btn btn-flat" %>

        <!-- </div> -->
    </div>
  </div>
</div>
</div>

