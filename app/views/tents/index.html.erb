<!-- navbar component -->
<div class="container-index">
  <div class="cards">
    <% @tents.each do |tent| %>
      <%= link_to tent_path(tent) do %>
        <div class="card shadow">
          <%= cl_image_tag tent.photo, height: 250, width: 400, crop: :fill, class:"card-img-top" %>
          <div class="card-body">
            <p class="card-text"> <%= tent.address %></p>
            <h5 class="card-title" style="width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= tent.title %></h5>
            <div class="d-flex justify-content-between">
              <div>
                <% 5.times do %>
                  <i class="fas fa-star mr-0"></i>
                <% end %>
              </div>
              <div class= "d-flex align-items-baseline">
                <p class="card-text font-weight-bold" style="font-size: 20px"> $<%= tent.price %></p>
                <p>/day</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div
  id="map"
  style="width: 60%;
  margin-left: 80px;"
  class="shadow"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>


