<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1500581276021-a4bbcd0050c5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80');">
  <div class="container">
    <div class="row">

      <div class="col-4 box pt-4 pb-2">
        <h1>Camp More. Worry Less.</h1>
        <h2>Join Rent-A-Tent</h2>


        <div class="form-group">
        <%= form_tag tents_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Where are you camping?"
          %>
          <%= submit_tag "Explore Tents", class: "btn btn-search-mainpage mt-3 w-100" %>
        <% end %>
        </div>

      </div>

    </div>
  </div>
</div>




